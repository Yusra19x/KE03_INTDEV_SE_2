@model IEnumerable<DataAccessLayer.Models.Product>

<h2>Producten</h2>

<table class="table">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Categorie</th>
            <th>Merk</th>
            <th>Prijs (€)</th>
            <th>Voorraad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td>@p.Brand</td>
                <td>@(p.Price.ToString("0.00"))</td>
                <td>@p.Stock</td>
            </tr>
        }
    </tbody>
</table>