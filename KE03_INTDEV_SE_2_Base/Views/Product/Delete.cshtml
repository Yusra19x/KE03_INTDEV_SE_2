@model DataAccessLayer.Models.Product

@{
    ViewData["Title"] = "Verwijderen";
}

<h1>Verwijderen</h1>

<h3>Weet je zeker dat je dit product wilt verwijderen?</h3>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Naam</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Beschrijving</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3">Categorie</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

        <dt class="col-sm-3">Prijs</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-3">Voorraad</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Stock)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Annuleren</a>
    </form>
</div>